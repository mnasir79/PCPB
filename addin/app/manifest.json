{
    "name": "ININ Analytics Hub",
    "short_name": "Analytics Hub",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "page": "background.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": [
        "tabs",
        "<all_urls>",
        "debugger",
        "notifications",
        "storage",
        "webRequest"
    ],
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "scripts/contentscript.js",
            "scripts/powerbilogin.js"
        ],
        "run_at": "document_end",
        "all_frames": false
    }],
    "browser_action": {
        "default_icon": {
            "19": "images/icon-19.png",
            "38": "images/icon-38.png"
        },
        "default_title": "inin-analytics-hub",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "images/icon-48.png"
    ]
}